<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game Library</title>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/js/library.js"></script>
    <link rel="stylesheet" href="/css/gamelibrary.css" />
  </head>
  <body id="top">
    {{> header}}

    <div id="gamesearchdiv">
      <p style="display: inline; font-size:x-large; font-weight: bolder; margin: 0px 15px;">Looking for a specific game?</p>
      <input type="text" placeholder="Search games..." name="gamesearch" id="gamesearch" />
    </div>

    
    <div id="gameslist">
      <div id="divsectiontitle">
        <p id="sectiontitle">Game Library</p>
        <img src="/images/Home_Images/bg1.png" alt="Background" />
      </div>
      {{#each games}}
        <div>
          <p id="hoursplayed">{{hours}} hours</p>
          <a href="/gamepage/{{name}}">
              <img src={{image}} alt={{name}} />
          </a>
          {{#if user}}
            <button class="gamebutton" id="fav" name="{{name}}">Favorite</button>
            <button class="gamebutton" id="del" name="{{name}}">Delete</button>
          {{/if}}
        </div>
      {{/each}}
    </div>
  </body>
</html>